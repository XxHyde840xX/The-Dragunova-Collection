<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>Ar_Crystal_Small</defName>
    <label>Arefar Crystal 1x1</label>
    <description>Max Temperature: -19</description>
    <category>Building</category>
	<minifiedDef>MinifiedThing</minifiedDef>
    <graphicData>
      <texPath>Things/Building/Crystallic/Ar_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>TransparentPostLight</shaderType>
	  <drawSize>(1,1)</drawSize>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
      <damageData>
        <rect>(0.2,0,0.6,0.1)</rect>
      </damageData>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
	<uiIconPath>Things/Building/Crystallic/Ar_Small</uiIconPath>
	<uiIconScale>1</uiIconScale>
	<size>(1,1)</size>
    <passability>Impassable</passability>
    <pathCost>30</pathCost>
    <constructEffect>ConstructDirt</constructEffect>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.40</fillPercent>
	<thingCategories>
      <li>BuildingsTemperature</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
	  <Beauty>3</Beauty>
	  <Mass>3</Mass>
      <WorkToBuild>50</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
	<costList>
      <Heart>1</Heart>
	  <Gold>15</Gold>
	  <Silver>250</Silver>
    </costList>
    <building>
      <destroySound></destroySound>
    </building>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <placeWorkers>
      <li>PlaceWorker_CoolerSimple</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_HeatPusher">
        <heatPerSecond>-10</heatPerSecond>
        <heatPushMinTemperature>-19</heatPushMinTemperature>
      </li>
	  <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(115,215,255)</glowColor>
      </li>
    </comps>
    <designationCategory>Temperature</designationCategory>
    <designationHotKey>Misc4</designationHotKey>
  </ThingDef>

